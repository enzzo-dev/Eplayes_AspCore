@model Jogador
@{
    ViewData["Title"] = "E-players - Jogadores";
}

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label>ID</label>
    <input type="text" name="IdEquipe">

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Equipe</label>
    <select name="IdEquipe">

        @foreach (Equipe equipes in Cadastrar())
        {
            <option></option>
        }

    </select>

    <button type="submit">Cadastrar</button>
    
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID:</th>
        <th>Nome:</th>
        <th>Equipe</th>
    </thead>
    <tbody>

        @foreach (Jogador jogador in ViewBag.Jogadores)
        {
            <tr>        
                <td>@jogador.IdJogador</td>
                
                <td>@jogador.Nome</td>

                <td>@jogador.nomeEquipe</td>

                <td><a asp-area="Link para excluir algum jogador" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador">Excluir</a></td>
            </tr>
        }

    </tbody>
</table>
